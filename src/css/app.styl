html, body
{
  height: 100%;
}

/* Fonts
=============*/
@import url(http://fonts.googleapis.com/css?family=Open+Sans\:300italic,400italic,700italic,400,300,700);

/* Body
=============*/
/* IE9 SVG, needs conditional override of 'filter' to 'none' */


/* Widgets (All view blocks)
==================================== */
.widget
{
  -webkit-border-radius: 1px;
  -moz-border-radius: 1px;
  -ms-border-radius: 1px;
  -o-border-radius: 1px;
  border-radius: 1px;
  -webkit-box-sizing: content-box;
  -moz-box-sizing: content-box;
  box-sizing: content-box;
  padding: 10px 12px;
  color: #f8f8f8;
  background: rgba(81, 81, 81, 0.4);
  margin-bottom: 30px;
  position: relative;
}

/* Navigation
================== */
.dropdown-toggle {cursor: pointer;}

/* Dashboard
==================== */
.next-event h1
{
  color: #FFF;
  font-size: 40px;
  font-weight: bold;
  letter-spacing: 0;
  line-height: 34px;
  margin: 10px 0 0;
}

.next-event .subheading
{
  font-size: 20px;
  color: #999;
}

.next-event h2
{
  color: #C91619;
  font-size: 54px;
  font-weight: bold;
  line-height: 16px;
  margin: 32px 0 0;
  text-align: right;
}

.next-event h3
{
  color: #999999;
  margin: 0;
  text-align: right;
  font-size: 37px;
}

.next-event h5
{
  text-align: right;
}

.round.next-round
{
  font-size: 80px;
  line-height: 117px;
  font-weight: lighter;
  font-style: italic;
  color: #FFF;
  border-right: 1px solid;
  background-color: brown;
  letter-spacing: -8px;
}

.next-event .time
{
  font-size: 20px;
  margin-left: 10px;
  padding-left: 10px;
  border-left: 1px solid #FFF;
  color: gold;
}

.next-event .date
{
  font-size: 20px;
  color: goldenrod;
}

.date-time
{
  margin-top: 10px;
}

.utc-time
{
  font-size: 13px;
  color: green;
}

/* Standings List
=================================== */
